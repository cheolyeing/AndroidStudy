            android:background="@android:color/holo_blue_light"
            android:layout_width="50dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </LinearLayout>
        <LinearLayout
            android:background="@android:color/holo_purple"
            android:layout_width="50dp"
            android:layout_weight="1"
